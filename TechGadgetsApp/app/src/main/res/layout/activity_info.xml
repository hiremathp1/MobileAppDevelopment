<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp">
        <ImageView
            android:id="@+id/imgGajet"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="phone XS"
            android:textSize="18dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/linMdle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linLast">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txtDiscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone XS"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:id="@+id/linLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@color/colorAccent"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Link for more Info"
                android:textSize="18dp"
                android:padding="5dp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>



    </ScrollView>


</LinearLayout>